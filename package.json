{
  "name": "cowork-oss",
  "version": "0.4.2",
  "description": "CoWork-OSS - Open source agentic task automation for macOS",
  "overrides": {
    "undici": "^7.0.0"
  },
  "main": "dist/electron/electron/main.js",
  "author": "CoWork-OSS Contributors",
  "license": "MIT",
  "homepage": "https://github.com/CoWork-OS/cowork-oss#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CoWork-OS/cowork-oss.git"
  },
  "bugs": {
    "url": "https://github.com/CoWork-OS/cowork-oss/issues"
  },
  "keywords": [
    "ai",
    "agent",
    "automation",
    "claude",
    "electron",
    "macos",
    "task-automation",
    "llm"
  ],
  "private": false,
  "scripts": {
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "tsc -p tsconfig.electron.json && cross-env NODE_ENV=development electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "package": "npm run build && electron-builder",
    "lint": "eslint src --ext ts,tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@aws-sdk/client-bedrock": "^3.975.0",
    "@aws-sdk/client-bedrock-runtime": "^3.700.0",
    "@google/generative-ai": "^0.24.1",
    "better-sqlite3": "^12.6.2",
    "chokidar": "^5.0.0",
    "discord.js": "^14.25.1",
    "docx": "^9.5.1",
    "electron-updater": "^6.3.9",
    "exceljs": "^4.4.0",
    "grammy": "^1.39.3",
    "mammoth": "^1.11.0",
    "mime-types": "^3.0.2",
    "pdf-parse": "^2.4.5",
    "pdfkit": "^0.17.2",
    "playwright": "^1.58.0",
    "pptxgenjs": "^4.0.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^25.0.10",
    "@types/pdf-parse": "^1.1.5",
    "@types/pdfkit": "^0.17.4",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.2",
    "globals": "^17.1.0",
    "typescript": "^5.7.3",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0"
  },
  "build": {
    "appId": "com.cowork-oss.app",
    "productName": "CoWork-OSS",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "publish": {
      "provider": "github",
      "owner": "CoWork-OS",
      "repo": "cowork-oss"
    }
  }
}
